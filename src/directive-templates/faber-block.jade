.faber-block-item(ng-class="{'faber-block-hover': isMouseHover, 'faber-block-selected': isSelected, 'faber-block-moving': isMoving}", ng-mouseover="mouseover()", ng-mouseenter="mouseenter()", ng-mouseleave="mouseleave()", ng-click="select($event)")
  .faber-block-actions
    label.faber-block-position(ng-click="positionSelect()")
      | Position:&nbsp;
      span {{$parent.$index+1}} / {{$parent.block.blocks.length}}
        select(ng-model="$parent.$index", ng-options="i as (i == $parent.$index ? (i+1)+' (current)' : i+1) for i in indexRange()", ng-change="onSelectChange()")
    button.faber-block-close.fa.fa-trash-o(ng-click="removeSelf()")

  faber-element-block(ng-if="component.type != 'group'")
  faber-group-block(ng-if="component.type == 'group'")